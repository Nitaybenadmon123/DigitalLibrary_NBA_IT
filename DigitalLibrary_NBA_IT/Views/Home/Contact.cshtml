@{
    ViewBag.Title = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1517433456452-f9633a875f6f?w=1920&h=1080&fit=crop');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
        }
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
        }
        .contact-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin-top: 50px;
        }

        .contact-header {
            font-family: 'Arial', sans-serif;
            font-size: 36px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .contact-details {
            font-size: 18px;
            color: #34495e;
            line-height: 1.8;
        }

        .icon {
            font-size: 24px;
            margin-right: 10px;
            color: #2980b9;
        }

        .email-link {
            color: #e74c3c;
            text-decoration: none;
            font-weight: bold;
        }

            .email-link:hover {
                text-decoration: underline;
            }

        .btn-back {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            text-transform: uppercase;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: #2980b9;
                transform: scale(1.05);
            }

        .icon-phone {
            color: #27ae60;
        }

        .contact-icons {
            text-align: center;
            font-size: 60px;
            margin-bottom: 20px;
            color: #3498db;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <span class="navbar-brand">Digital Library</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @*<li class="nav-item">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                        </li>*@
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    @*<li class="nav-item">
                            @Html.ActionLink("Register", "Register", "User", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "User", null, new { @class = "nav-link active" })
                        </li>*@

                    @if (Session["UserID"] != null)
                    {
                        <li><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profile", "UserProfile")">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "User")">Logout</a>
                        </li>
                        <li><a class="nav-link" href="@Url.Action("PersonalLibrary", "Library")">My Library</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register", "User")">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "User")">Login</a>
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Welcome", "Welcome", "Home", null, new { @class = "nav-link" })
                        </li>
                        @*<li class="nav-item">
                                @if (ViewContext.RouteData.Values["action"].ToString() != "Welcome")
                                {
                                    <a class="nav-link" href="@Url.Action("Welcome", "Home")">Welcome</a>
                                }
                            </li>*@
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="contact-container">
            <h1 class="contact-header">Get in Touch</h1>
            <div class="contact-icons">
                <i class="bi bi-envelope-fill"></i>
            </div>
            <p class="contact-details">
                We’d love to hear from you! If you have any questions, suggestions, or issues, feel free to contact us.
            </p>
            <div class="contact-details">
                <p>
                    <span class="icon"><i class="bi bi-person-fill"></i></span>
                    <strong>Idan Tegave</strong><br />
                    <span class="icon"><i class="bi bi-envelope-fill"></i></span>
                    <a href="mailto:Idante@ac.sce.ac.il" class="email-link">Idante@ac.sce.ac.il</a>
                </p>
                <p>
                    <span class="icon"><i class="bi bi-person-fill"></i></span>
                    <strong>Nitay Ben Admon</strong><br />
                    <span class="icon"><i class="bi bi-envelope-fill"></i></span>
                    <a href="mailto:nitaybe@ac.sce.ac.il" class="email-link">nitaybe@ac.sce.ac.il</a>
                </p>
                <p>
                    <span class="icon icon-phone"><i class="bi bi-telephone-fill"></i></span>
                    <strong>Phone:</strong> +972-54-123-4567
                </p>
            </div>
            @*<p class="contact-details text-center">
                <button class="btn-back" onclick="window.location.href='/Home/Index'">Back to Home</button>
            </p>*@
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</body>
</html>
