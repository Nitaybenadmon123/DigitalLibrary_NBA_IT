<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Reports | Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

            .card h3 {
                font-size: 1.5rem;
                color: #333;
            }

            .card p {
                font-size: 1.25rem;
                font-weight: bold;
            }

        .chart-container {
            position: relative;
            height: 400px;
        }

        .section-title {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">System Reports</h1>

        <!-- נתונים מרכזיים -->
        <div class="row mb-5">
            <div class="col-md-3">
                <div class="card text-center p-4">
                    <h3>Top Selling Books</h3>
                    <p>5 Books</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-4">
                    <h3>Total Sales (Last Month)</h3>
                    <p>$12,345</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-4">
                    <h3>Active Users</h3>
                    <p>120 Users</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center p-4">
                    <h3>Books on Loan</h3>
                    <p>250 Books</p>
                </div>
            </div>
        </div>

        <!-- גרפים -->
        <div class="section-title">Visual Analytics</div>
        <div class="row">
            <div class="col-md-6">
                <div class="card p-3">
                    <h3 class="text-center">Monthly Sales</h3>
                    <div class="chart-container">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-3">
                    <h3 class="text-center">Top Borrowed Books</h3>
                    <div class="chart-container">
                        <canvas id="borrowedChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // גרף מכירות חודשי
        const salesCtx = document.getElementById('salesChart').getContext('2d');
        new Chart(salesCtx, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [{
                    label: 'Sales ($)',
                    data: [1200, 1500, 1000, 2000, 2500, 3000, 4000],
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // גרף ספרים מושאלים
        const borrowedCtx = document.getElementById('borrowedChart').getContext('2d');
        new Chart(borrowedCtx, {
            type: 'bar',
            data: {
                labels: ['Book 1', 'Book 2', 'Book 3', 'Book 4', 'Book 5'],
                datasets: [{
                    label: 'Borrowed Times',
                    data: [50, 30, 40, 60, 70],
                    backgroundColor: '#28a745'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
</body>
</html>
