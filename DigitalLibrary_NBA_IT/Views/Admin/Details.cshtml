@model DigitalLibrary_NBA_IT.Models.USERS

<div class="container mt-5">
    <h2>User Details</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger">@TempData["Message"]</div>
    }


    <div class="card">
        <div class="card-header bg-dark text-white">
            User Information
        </div>
        <div class="card-body">
            <p><strong>User ID:</strong> @Model.user_id</p>
            <p><strong>Name:</strong> @Model.name</p>
            <p><strong>Email:</strong> @Model.email</p>
            <p><strong>Registration Date:</strong> @(Model.registration_date.HasValue ? Model.registration_date.Value.ToString("yyyy-MM-dd") : "-")</p>
            <p><strong>Is Admin:</strong> @(Model.isAdmin ? "Yes" : "No")</p>
        </div>
    </div>

    <div class="mt-4">
        <h4>Statistics</h4>
        <ul>
            <li>Total Books Purchased: @ViewBag.TotalBooksPurchased</li>
            <li>Total Books Borrowed: @ViewBag.TotalBooksBorrowed</li>
            <li>Total Amount Spent: $@ViewBag.TotalAmountSpent</li>
        </ul>
    </div>


    <div class="mt-3">
        <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">Back to User Management</a>
    </div>
</div>
