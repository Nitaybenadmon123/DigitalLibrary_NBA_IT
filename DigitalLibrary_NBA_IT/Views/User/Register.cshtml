@model DigitalLibrary_NBA_IT.Models.USERS

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <!-- הוספת Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .register-container {
            max-width: 500px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
        }

        .form-label {
            font-weight: bold;
        }

        .password-info {
            font-size: 0.85em;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Register</h2>
        <form action="/User/Register" method="post">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", id = "name", placeholder = "Enter your name" })
                @Html.ValidationMessageFor(m => m.name, null, new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", id = "email", placeholder = "Enter your email" })
                @Html.ValidationMessageFor(m => m.email, null, new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <small class="password-info">Password must be at least 6 characters, include one number, and one special character.</small>
                @Html.PasswordFor(m => m.password, new { @class = "form-control", id = "password", placeholder = "Enter your password" })
                @Html.ValidationMessageFor(m => m.password, null, new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <!-- הוספת Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
